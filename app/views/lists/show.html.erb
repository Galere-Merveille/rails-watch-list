<div class="container mt-5">
  <h1><%= @list.name %></h1>
    <div class="row d-flex justify-content-between">
    <% @bookmarks.each do |bookmark| %>
      <div class="card mt-3" style="width: 18rem;">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><strong><%= bookmark.movie.title %></strong>
          <br><%= bookmark.movie.rating %> ‚≠ê</h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <a href="#" class="btn btn-primary">See overview</a>
        </div>
      </div>
    <% end %>
      </div>

<%= link_to "<< Back to lists", lists_path, class:"btn btn-outline-primary mt-5" %>
<%= link_to "Create a new bookmark", new_list_bookmark_path(@list), class:"btn btn-primary mt-5" %>
</div>
